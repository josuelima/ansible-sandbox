# Nginx server conf file
# This file is managed by Ansible, all in production changes will be lost
# Source: http://github.com/josuelima/ansible-sandbox
server {
  listen 80;
  server_name localhost; # change to match your URL
  root {{ app_home_path }}/public; # I assume your app is located at this location

  location / {
    proxy_pass http://{{ app_name }}; # match the name of upstream directive which is defined above
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }

  location ~* ^/assets/ {
    # Per RFC2616 - 1 year maximum expiry
    expires 1y;
    add_header Cache-Control public;

    # Some browsers still send conditional-GET requests if there's a
    # Last-Modified header or an ETag header even if they haven't
    # reached the expiry date sent in the Expires header.
    add_header Last-Modified "";
    add_header ETag "";
    break;
  }
}
